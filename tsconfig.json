{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": "./",
        "allowJs": true,
        "declaration": true,
        "outDir": "./dist",
        "types": [
            "node"
        ],
        "paths": {
            "src": ["src/*"]
        }
    },
    "include": [ "src/", "data/" ],
    "exclude": [ "!src/", "!data/" ]
}
