{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": "./src",
        "allowJs": true,
        "declaration": true,
        "outDir": "./dist",
        "types": [
            "node"
        ],
        "paths": {
            "@cache/*": ["cache/*"],
            "@cache": ["cache/index"],
            "@net/*": ["net/*"],
            "@net": ["net/index"],
            "@util/*": ["util/*"],
            "@util": ["util/index"],
            "@world/*": ["world/*"],
            "@world": ["world/index"]
        }
    },
    "include": [ "src/" ],
    "exclude": [ "!src/" ]
}
