{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": "./src",
        "allowJs": true,
        "declaration": true,
        "outDir": "./dist",
        "types": [
            "node"
        ]
    },
    "include": [ "src/" ],
    "exclude": [ "!src/" ]
}
