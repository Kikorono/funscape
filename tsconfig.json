{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": "./src",
        "allowJs": true,
        "declaration": true,
        "outDir": "./dist",
        "types": [
            "node"
        ],
        "paths": {
            "@cache/*": ["engine/cache/*"],
            "@cache": ["engine/cache/index"],
            "@net/*": ["engine/net/*"],
            "@net": ["engine/net/index"],
            "@util/*": ["engine/util/*"],
            "@util": ["engine/util/index"],
            "@world/*": ["engine/world/*"],
            "@world": ["engine/world/index"]
        }
    },
    "include": [ "src/" ],
    "exclude": [ "!src/" ]
}
